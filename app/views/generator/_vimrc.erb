set nocompatible
<%= display_config :variables, required: true %>
" --> Personalize: allows customizations via a local configuration
call SourceIfReadable("~/.vimrc.local.pre")
<%= display_config :plugin_manager, required: true %>
<%= display_config :sane_defaults %>
<%= display_config :basic_keymappings %>
call plug#begin(expand("~/.vim/bundle"))
<%- loaded_configs = %w[variables plugin_manager sane_defaults basic_keymappings] %>
<%- (read_configs.keys - loaded_configs).each do |config| %>
<%= display_config config %>
<%- end %>
" --> Personalize: allows customizations via a local configuration
call SourceIfReadable("~/.gvimrc")
call SourceIfReadable("~/.vimrc.local")
call plug#end()
colorscheme nova
let g:airline_theme='nova'
